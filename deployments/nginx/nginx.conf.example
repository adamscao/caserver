# SSH CA Server - Nginx Configuration
# This configuration provides HTTPS frontend for the SSH CA Server
#
# Installation:
#   1. Copy to /etc/nginx/sites-available/ssh-ca
#   2. Update server_name with your domain
#   3. Update SSL certificate paths
#   4. Create symlink: ln -s /etc/nginx/sites-available/ssh-ca /etc/nginx/sites-enabled/
#   5. Test: nginx -t
#   6. Reload: systemctl reload nginx

# Upstream backend
upstream ssh_ca_backend {
    server 127.0.0.1:2025 fail_timeout=10s max_fails=3;
    keepalive 32;
}

# Rate limiting zones
limit_req_zone $binary_remote_addr zone=auth_limit:10m rate=10r/m;
limit_req_zone $binary_remote_addr zone=api_limit:10m rate=60r/m;
limit_req_zone $binary_remote_addr zone=bootstrap_limit:10m rate=5r/m;

# HTTP to HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name ca.example.com;

    # Allow Let's Encrypt verification
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name ca.example.com;

    # SSL certificate configuration
    # Option 1: Let's Encrypt
    ssl_certificate /etc/letsencrypt/live/ca.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ca.example.com/privkey.pem;

    # Option 2: Self-signed (testing only)
    # ssl_certificate /etc/nginx/ssl/ssh-ca.crt;
    # ssl_certificate_key /etc/nginx/ssl/ssh-ca.key;

    # SSL/TLS configuration (Mozilla Intermediate)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    # SSL session cache
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    # OCSP stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate /etc/letsencrypt/live/ca.example.com/chain.pem;

    # Security headers
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Logging
    access_log /var/log/nginx/ssh-ca-access.log combined;
    error_log /var/log/nginx/ssh-ca-error.log warn;

    # Client body size limit
    client_max_body_size 10k;

    # Health check endpoint (no rate limit)
    location = /health {
        proxy_pass http://ssh_ca_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        access_log off;
    }

    # CA public key download (moderate rate limit)
    location = /v1/ca/user {
        limit_req zone=api_limit burst=10 nodelay;

        proxy_pass http://ssh_ca_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Cache CA public key
        proxy_cache_valid 200 1h;
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Bootstrap scripts (strict rate limit)
    location ~ ^/v1/bootstrap/(server|client)\.sh$ {
        limit_req zone=bootstrap_limit burst=2 nodelay;

        proxy_pass http://ssh_ca_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
    }

    # Server registration (moderate rate limit)
    location = /v1/register/server {
        limit_req zone=api_limit burst=5 nodelay;

        proxy_pass http://ssh_ca_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Increase timeout for registration
        proxy_read_timeout 30s;
    }

    # Certificate issuance (strict rate limit - authentication endpoint)
    location = /v1/certs/issue {
        limit_req zone=auth_limit burst=3 nodelay;

        proxy_pass http://ssh_ca_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Timeouts
        proxy_connect_timeout 10s;
        proxy_send_timeout 10s;
        proxy_read_timeout 10s;
    }

    # Certificate renewal (moderate rate limit)
    location = /v1/certs/renew {
        limit_req zone=api_limit burst=10 nodelay;

        proxy_pass http://ssh_ca_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
    }

    # Admin endpoints (strict rate limit)
    location ~ ^/v1/admin/ {
        limit_req zone=auth_limit burst=3 nodelay;

        proxy_pass http://ssh_ca_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Admin endpoints need longer timeout
        proxy_read_timeout 30s;
    }

    # All other API endpoints (default rate limit)
    location ~ ^/v1/ {
        limit_req zone=api_limit burst=20 nodelay;

        proxy_pass http://ssh_ca_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
    }

    # Deny access to all other locations
    location / {
        return 404;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

# Security: Drop requests with undefined server names
server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    server_name _;

    # Use same SSL certificate
    ssl_certificate /etc/letsencrypt/live/ca.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ca.example.com/privkey.pem;

    return 444;
}
